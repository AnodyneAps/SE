  <!-- custom input radio buttons -->
	<div class="radio  product-single__form product-form__item">
		<input type="radio" class="single-option-selector-{{ section.id }} "
		{% if option.selected_value == value %} checked="checked"{% endif %} id="Quantity-1" name="quantity" value="1" min="1" class="product-form__input" pattern="[0-9]*">

		<label for="Quantity-1">{{ 'products.radios.radio-one' | t }} (1) Single-pack: 
			<span class="qb-radio text-money">
				<span class="qb-discounted-price on-sale text-sale">
					<span class="money">
						695 kr
					</span>
				</span>
				<span class="qb-original-price text-strike text-muted">
					<span class="money">
						895 kr
					</span>
				</span>
				<span class="badge qb-saved-amount">
					{{ 'products.radios.radio-save-amount' | t }}  <span class="money">200 kr</span>
				</span>
			</span>
		</label>
		</div>

		
